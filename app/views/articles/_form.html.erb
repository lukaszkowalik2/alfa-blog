<%= render 'shared/errors', obj: @article%>
<div class="row">
  <div class="col-12-md">
    <%= form_for @article, :html => {class: "form-horizontal",role: "form"},data: { turbo: false } do |f|%>
    <div class="form-group">
      <%= f.label :title, class: "col-sm-2 control-label"%>
      <div class="col-sm-10">
        <%= f.text_field :title,class: "form-control",autofocus:true,placeholder: "Title of article" %>
      </div>
    </div>
    <div class="form-group">
      <%=  f.label :description, class: "col-sm-2 control-label"%>
      <div class="col-sm-10">
        <%= f.text_area :description,rows: 10,class: "form-control",placeholder: "Body of article" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit class: "btn btn-default btn-lg"%>
      </div>
    </div>
    <% end %>
    <div class="cols-xs-4 col-xs-offset-4">
      [ <%= link_to "Cancel request and return to article listing", articles_path%> ]
    </div>
  </div>
</div>